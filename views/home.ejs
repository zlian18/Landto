    <link rel="stylesheet" href="/css/home.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>

<body>
    <nav class="mx-5 navbar navbar-expand-md navbar-dark d-flex">
        <div class="container-fluid px-0">
            <div class="landto">
                <a href="/" class="nav-link">Landto</a>
            </div>
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="nav-container collapse navbar-collapse ms-auto" id="navbarNav">
                <div class="me-auto"></div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/landscapes" class="nav-link">Landscapes</a>
                    </li>
                    <% if(!currentUser) { %>
                    <li class="nav-item">
                        <a href="/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/register" class="nav-link">Register</a>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a href="/landscapes/new" class="nav-link">Upload Photos</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-6 offset-3">
            <main class="d-flex flex-column justify-content-center align-items-center text-center">
                <h1>Visions of Earth</h1>
